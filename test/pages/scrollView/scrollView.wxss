/* pages/scrollView/scrollView.wxss */
.container{
  display: flex;
  white-space: nowrap;
  /*
    row 默认排序
    row-reverse 从右到左排序
    column 从上到下排序
    column-reverse 从下往上排序
  */
  flex-direction: row;
  /*
   nowrap 默认不换行
   wrap 换行
  */
  flex-wrap: wrap;
  /*flex-start 默认左对齐
    flex-end 右对齐
    center 居中
    space-around 成员元素周围包裹空白
    space-between 成员之间空白
    justify-content: space-between;
  */
}

.size{
  width: 250rpx;
  height:350rpx;
  display:inline-block;
}
.a{
  background-color: red;
  /*
    order 通过数字对flex容器内部的成员设置顺序
    flex 可以调整每块区域所占有的比例
  */
  order: 1;
  flex: 3;
}
.b{
  background-color: blue;
  order: 5;
  flex: 2;
}
.c{
  background-color: pink;
  order: 4;
  flex: 1;
}
.d{
  background-color: black;
  order: 3;
  flex: 1;
}
.e{
  background-color: gray;
  order: 2;
  flex: 1;
}